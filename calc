package ilkders;

import java.util.Scanner;

public class hesapMakinesi {
	

	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
	
	System.out.printf("Toplama -- 1\nÇıkarma -- 2\nÇarpma -- 3\nBölme -- 4\nLütfen seçim yapınz :");
	int secim =sc.nextInt();
	switch(secim)
	{
		case 1:{
		Topla();
		break;
		}
		case 2:{
		Cikar();
		break;
		}
		case 3:{
		Carp();
		break;
		}
		case 4:{
		Bol();
		break;
		
		}

	}
	
	
	
	
	
	}
	public static void Topla() {
		int a, b;
		Scanner sc = new Scanner(System.in);
		System.out.println("Birinci sayı giriniz: ");	
		 a = sc.nextInt();
		 System.out.println("Birinci sayı giriniz: ");	
		 b = sc.nextInt();
		 int c=a+b;
		 System.out.printf("Sonuc = %d",c);
	}
	public static void Cikar() {
		int a, b;
		Scanner sc = new Scanner(System.in);
		System.out.println("Birinci sayı giriniz: ");	
		 a = sc.nextInt();
		 System.out.println("Birinci sayı giriniz: ");	
		 b = sc.nextInt();
		 int c=a-b;
		 System.out.printf("Sonuc = %d",c);
	}
	public static void Carp() {
		int a, b;
		Scanner sc = new Scanner(System.in);
		System.out.println("Birinci sayı giriniz: ");	
		 a = sc.nextInt();
		 System.out.println("Birinci sayı giriniz: ");	
		 b = sc.nextInt();
		 int c=a*b;
		 System.out.printf("Sonuc = %d",c);
	}
	public static void Bol() {
		int a, b;
		Scanner sc = new Scanner(System.in);
		System.out.println("Birinci sayı giriniz: ");	
		 a = sc.nextInt();
		 System.out.println("Birinci sayı giriniz: ");	
		 b = sc.nextInt();
		 int x= 0;
		 if(b == 0)
		 {
			 
			System.out.print("Hatalı giriş");
		 }
		 else{
		 float c=(float)a/(float)b;
		 System.out.printf("Sonuc = %3.2f",c);
		 }
		 }
	
	
	
	

}
